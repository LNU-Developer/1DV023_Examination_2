<h2>Code snippets</h2>
<table>
  <thead>
    <tr>
      <th>Snippet</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    {{#if viewData.snippets.length}}
    {{#each viewData.snippets}}
    <tr>
        <td>{{this.snippet}}</td> 
        <td>{{this.createdAt}}</td>
        {{#ifCond this.usernameId "===" this.userId}}
        <td><form method="post" action="/{{this.id}}/edit/">
          <button type="submit">Edit</button>
        </form></td>
        <td><form method="post" action="/{{this.id}}/delete/">
          <button type="submit">Delete</button>
        </form></td>
        {{/ifCond}}
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td>No snippets have been created.</td>
    </tr>
  {{/if}}
  </tbody>
</table>
{{#if userId}}
<form method="post" action="/new/">
  <button type="submit">Create a snippet</button>
</form>
{{/if}}
