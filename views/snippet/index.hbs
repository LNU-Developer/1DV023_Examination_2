
<div class="container">
  <div class="row">
    <div class="col-md-12">
<h3>Code snippets</h3>
{{#if userId}}
<form method="post" action="/new/">
  <button type="submit" class="btn btn-outline-success">Create a snippet</button> <br><br>
</form>
{{/if}}
<table class = "table">
  <thead>
    <tr>
      <th scope="col">Snippet</th>
      <th scope="col">Created</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#if viewData.snippets.length}}
    {{#each viewData.snippets}}
    <tr>
        <td><pre>{{this.snippet}}</pre></td>
        <td>{{this.createdAt}}</td>
        {{#ifCond this.usernameId "===" this.userId}}
        <td><form method="post" action="/{{this.id}}/">
          <button type="submit" class="btn btn-outline-warning">Edit</button>
        </form></td>
        <td><form method="post" action="/{{this.id}}/delete/">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form></td>
         {{else}}
        <td>No access</td>
        <td>No access</td>
        {{/ifCond}}
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td>No snippets have been created.</td>
    </tr>
  {{/if}}
  </tbody>
</table>

    </div>
  </div>
</div>
